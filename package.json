{
  "name": "anon",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "bun run --filter @anon/web dev",
    "dev:local": "./scripts/local-dev.sh",
    "build": "bun run --filter @anon/web build",
    "build:circuits": "bun run --filter @anon/protocol build:circuits",
    "test": "bun run test:contracts",
    "test:contracts": "cd packages/protocol && forge test",
    "test:circuits": "cd packages/protocol && bun run test:circuits",
    "test:withdraw": "./scripts/test-withdraw.sh",
    "test:auction": "./scripts/test-auction.sh",
    "lint": "bun run --filter @anon/web lint && bun run lint:scripts",
    "lint:scripts": "tsc --project scripts/tsconfig.json",
    "format": "bun run --filter @anon/web format",
    "format:check": "bun run --filter @anon/web format:check"
  },
  "dependencies": {
    "viem": "^2.21.55"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5"
  }
}
