{
  "name": "anon",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "bun run --filter @anon/web dev",
    "dev:local": "./scripts/local-dev.sh",
    "dev:local:fork": "./scripts/local-dev.sh --fork https://sepolia.base.org",
    "build": "bun run --filter @anon/web build",
    "lint": "bun run --filter '*' lint",
    "test": "bun run contracts:test && bun run pool:test",
    "contracts:build": "cd packages/contracts && bun run build",
    "contracts:test": "cd packages/contracts && bun run test",
    "contracts:deploy:testnet": "cd packages/contracts && ./script/deploy-testnet.sh",
    "pool:build": "cd packages/pool && bun run build",
    "pool:test": "cd packages/pool && bun run test:circuit",
    "pool:generate-verifiers": "cd packages/pool && bun run generate:verifiers"
  },
  "dependencies": {
    "viem": "^2.21.55"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5"
  }
}
